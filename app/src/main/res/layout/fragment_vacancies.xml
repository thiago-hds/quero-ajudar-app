<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragments.VacanciesFragment">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.br.queroajudar.viewmodel.VacanciesViewModel"/>
        <variable
            name="isLoadingProgressVisible"
            type="boolean"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.drawerlayout.widget.DrawerLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/vacancies_dl_filters"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:openDrawer="end">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
                <!-- Your content goes here -->


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/contraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            >


                    <Button
                        android:id="@+id/vacancies_btn_fiters"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/vacancies_btn_filters"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:icon="@drawable/ic_tune_black_24dp"
                        app:strokeColor="@color/colorPrimary"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/vacancies_recyclerView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clipToPadding="false"
                        android:padding="6dp"
                        app:spanCount="2"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toTopOf="@id/progressBar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vacancies_btn_fiters"
                        tools:itemCount="4"
                        tools:listitem="@layout/vacancy_item" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@android:color/transparent"
                        android:progressTint="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:pbApiStatus="@{viewModel.apiStatus}"/>
                    <!--
                    <include
                        android:id="@+id/vacancies_overlay_loading"
                        android:visibility="gone"
                        layout="@layout/loading_overlay"/> -->


                    <!--
                    <ImageView
                        android:id="@+id/vacancies_iv_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"
                        android:elevation="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:apiStatus="@{viewModel.apiStatus}" /> -->



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimary"
                android:fitsSystemWindows="true"
                android:layout_gravity="end">


                <TextView
                    android:id="@+id/vacancies_tv_orderBy"
                    style="@style/layout_textview_itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/vacancies_tv_orderBy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/vacancies_btn_recommended"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/vacancies_btn_recommended"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vacancies_tv_orderBy" />

                <Button
                    android:id="@+id/vacancies_btn_popular"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/vacancies_btn_recommended"
                    app:layout_constraintStart_toEndOf="@id/vacancies_btn_recommended"
                    app:layout_constraintTop_toTopOf="@id/vacancies_btn_recommended" />

                <Button
                    android:id="@+id/vacancies_btn_recent"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/vacancies_btn_recommended"
                    app:layout_constraintStart_toEndOf="@id/vacancies_btn_popular"
                    app:layout_constraintTop_toTopOf="@id/vacancies_btn_recommended" />

                <TextView
                    android:id="@+id/vacancies_tv_FilterBy"
                    style="@style/layout_textview_itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/vacancies_tv_filterBy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.drawerlayout.widget.DrawerLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>