<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="skill"
            type="com.br.queroajudar.model.Cause" />

        <variable
            name="clickListener"
            type="com.br.queroajudar.view.adapters.CauseClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(skill)}">


        <TextView
            android:id="@+id/skillItem_tv_icon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{skill.iconUnicode}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="\uf2b9"
            style="@style/icon_textView_style" />

        <TextView
            android:id="@+id/skillItem_tv_Name"
            style="@style/itemFields_textView_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{skill.name}"
            app:layout_constraintBottom_toBottomOf="@+id/skillItem_tv_icon"
            app:layout_constraintStart_toEndOf="@+id/skillItem_tv_icon"
            app:layout_constraintTop_toTopOf="@+id/skillItem_tv_icon"
            tools:text="@string/tools_skillItem_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>