<!--    </style>-->

    <!-- Spinner -->
    <style name="spinner_style">
<!--        <item name="android:background">@drawable/white_round_shape</item>-->
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorWhite</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
    </style>

    <style name="progressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>



</resources>
