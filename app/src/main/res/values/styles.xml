<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Shapes -->
    <style name="btn_rounded_shape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <!-- Buttons -->
    <style name="rounded_contained_button_style" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/btn_rounded_shape</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/btn_text_size_16sp</item>
    </style>

    <style name="rounded_outlined_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/btn_rounded_shape</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/btn_text_size_16sp</item>
    </style>

    <style name="text_button_style" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- <item name="shapeAppearance">@style/btn_rounded_shape</item> -->
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/btn_text_size_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="small_rounded_outlined_button_style" parent="rounded_outlined_button_style">
        <item name="android:textSize">@dimen/btn_small_text_size_12sp</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="small_outlined_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/btn_small_text_size_12sp</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:minWidth">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="small_outlined_icon_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/btn_small_text_size_12sp</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:minWidth">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <!-- TextInputLayout -->
    <style name="small_dropdown_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:minWidth">14dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- TextViews -->
    <style name="primaryColor_textView_style">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="primaryColor_textView_style_20sp" parent="primaryColor_textView_style">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="primaryColor_textView_style_12sp" parent="primaryColor_textView_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="primaryColor_textView_style_16sp" parent="primaryColor_textView_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="primaryColor_textView_style_18sp" parent="primaryColor_textView_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="grey_textView_style">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="grey_textView_style_12sp" parent="grey_textView_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="grey_textView_style_14sp" parent="grey_textView_style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="grey_textView_style_16sp" parent="grey_textView_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="grey_textView_style_roboto">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="icon_textView_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/font_awesome_solid</item>
        <item name="android:textSize">16dp</item>
    </style>



